package aula2Sandra;
import java.util.Scanner;

public class SistemaVendas {
	public static void main(String[] args) {
		Scanner entra = new Scanner(System.in);
		Clientes cli = new Clientes(); // construtor sem parametro chamado.
		Pedidos ped = new Pedidos(); // construtor com parametros 
		ped.setNumeroPed(01);
		ped.setDataPed("24/03/2005");
		ped.setValorPed(15.00);

		System.out.println("Bem vindo ao nosso sistema de vendas\n 1 - Clientes\n 2 - Pedidos\n 3 - Produtos\nO que deseja acessar?");
		int selecao = entra.nextInt();
		if (selecao == 1) {
			cli.imprimirCliente();
		} else if (selecao == 2){
			ped.imprimirPedidos();
		} else {
			
		}
		entra.close();
	}
}
