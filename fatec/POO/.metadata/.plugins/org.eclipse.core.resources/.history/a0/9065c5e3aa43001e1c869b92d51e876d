package aula2Sandra;
import java.util.Scanner;

public class SistemaVendas {
	public static void main(String[] args) {
		Scanner entra = new Scanner(System.in);
		Clientes cli = new Clientes(); // uso do get
		Pedidos ped = new Pedidos(); // uso do set
		// construtor copia
		Produtos p = new Produtos();
		Produtos p1 = new Produtos(p);
		
		System.out.println("Bem vindo ao nosso sistema de vendas\n 1 - Clientes\n 2 - Pedidos\n 3 - Produtos\nO que deseja acessar?");
		int selecao = entra.nextInt();
		if (selecao == 1) {
			cli.imprimirCliente();
		} else if (selecao == 2){
			ped.setNumeroPed(10);
			ped.setDataPed("24/03/2005");
			ped.setValorPed(15.00);
			ped.imprimirPedidos();
		} else {
			System.out.println("Digite o codigo do produto: ");
			p1.imprimirProdutos();
		}
		entra.close();
	}
}
